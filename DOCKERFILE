# Use an official Ubuntu as a parent image
FROM ubuntu:20.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive

# Install dependencies
RUN apt-get update && \
    apt-get install -y \
    libjsoncpp-dev \
    uuid-dev \
    zlib1g-dev \
    openssl \
    libssl-dev \
    git \
    cmake \
    build-essential

# Clone and install Drogon
RUN git clone https://github.com/drogonframework/drogon /drogon && \
    cd /drogon && \
    git submodule update --init --recursive && \
    mkdir build && cd build && \
    cmake .. && \
    make && \
    make install

# Set the working directory
WORKDIR /app

# Copy your project files into the container
COPY . /app

# Build your project
RUN mkdir -p build && \
    cd build && \
    cmake .. && \
    make

# Expose the port your API will run on (adjust if needed)
EXPOSE 8080

# Run your application
CMD ["./build/MyDrogonAPI"]
